# Example environment variables for Easypanel deployment
# Copy this to your Easypanel environment variables section

APP_NAME="Emerst - Sistema de Gest√£o de Prazos"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=https://your-domain.com

APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=24.152.38.77
DB_PORT=3306
DB_DATABASE=emerst
DB_USERNAME=emerst
DB_PASSWORD=Lucas@2204

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=emerst

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_CONNECTION=
SESSION_STORE=
SESSION_SECURE_COOKIE=false

# Queue Configuration
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@emerst.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local

# Admin User Creation (will be created on first deploy)
ADMIN_EMAIL=admin@emerst.com
ADMIN_PASSWORD=your-secure-admin-password

# Seed database on first deploy
SEED_DATABASE=true

# Security
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_DOMAIN=.your-domain.com